{% load static from staticfiles %}


            <article class="entry">
{% if entry.image and not entry.image.is_fallback %}
                <img src="{{ entry.image.src }}" class="main-avatar" alt="" width=64 height=64>
{% else %}
                <img src="{% static 'pdc/2015/byantonia-super-s140.png' %}" class="main-avatar main-avatar-fallback" alt="" width=140 height=140>
{% endif %}

                <h1>{{ entry.title }}</h1>

                <div class="entry-content">
                    {{ entry.body|safe }}
                </div>

                <footer class="entry-footer">
                    <div>
                        <time class="entry-date" datetime="{{ entry.published|date:'c' }}">{{ entry.published|date:"j F Y" }}</time>
                    </div>
                    <ul class="entry-tag-list">
{% for tag in entry.tags %}
                        <li><a href="{% url 'blog_tag' plus_separated_tags=tag %}">{{ tag }}</a></li>
{% endfor %}
                    </ul>
                    <div class="entry-permalink"><a href="{{ entry.href }}" title="permalink">#</a></div>
                </footer>
            </article>

